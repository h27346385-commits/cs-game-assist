{
  "name": "cs-game-assist",
  "productName": "CS游戏助手",
  "description": "CS2游戏数据分析与视频集锦生成工具",
  "private": true,
  "version": "1.0.0",
  "author": "CS Game Assist Team",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:compile": "node electron/build.cjs",
    "electron:dev": "npm run build && npm run electron:compile && npx electron dist-electron/main.cjs",
    "electron:build": "npm run build && npm run electron:compile && npx electron-builder",
    "electron:build:win": "npm run build && npm run electron:compile && npx electron-builder --win",
    "electron:build:portable": "npm run build && npm run electron:compile && npx electron-builder --win portable",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "lucide-react": "^0.575.0",
    "pg": "^8.19.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-is": "^19.2.0",
    "react-router-dom": "^7.13.1",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.27",
    "electron": "^28.3.3",
    "electron-builder": "^26.8.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.csgame.assist",
    "productName": "CS游戏助手",
    "copyright": "Copyright © 2026 CS Game Assist",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "dist-electron/main.cjs"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*.cjs",
      "node_modules/better-sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "resources/**/*",
      "node_modules/better-sqlite3/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "CSGameAssist-${version}-Portable.exe"
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "npmRebuild": true,
    "nodeGypRebuild": false
  }
}
